
<div class="field">
<p>物件名：<%= @case.title %></p>
<p>賃料：<%= @case.charge %>円</p>
<p>住所：<%= @case.address %></p>
<p>築年数：<%= @case.age %></p>
<p>備考：<%= @case.memo %></p>
</div>

<hr>

<% i=0 %>
<% @case.stations.each do |station| %>
<b><%= "最寄駅#{i+1}" %></b>
<p>路線名：<%= station.line %></p>
<p>駅名：<%= station.name %></p>
<p>徒歩分数：<%= station.walk %></p>
<% i+=1 %>
<% end %>

<%= link_to '編集', edit_case_path(@case) %> |
